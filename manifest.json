
{
  "manifest_version": 3,
  "name": "Color Picker",
  "description": "Find the RGB formula for a color on any webpage",
  "version": "1.0",
  "background": {
    "javascriptFile": "colorpicker.js"},
  "action": {
    "default_popup": "index.html",
    "default_icon": "assets/color-wheel.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "./colorpicker.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}